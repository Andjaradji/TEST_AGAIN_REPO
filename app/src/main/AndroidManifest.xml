<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vexanium.vexgift">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@drawable/small_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:name=".module.splash.ui.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.LauncherAppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".module.main.ui.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="vexgift" />
            </intent-filter>
        </activity>
        <activity android:name=".module.register.ui.RegisterActivity" />
        <activity
            android:name=".module.walkthrough.ui.WalkthroughActivity"
            android:theme="@style/AppTheme.LauncherAppTheme" />
        <activity
            android:name=".module.login.ui.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.token.ui.TokenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.voucher.ui.VoucherActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.detail.ui.VoucherDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.voucher.ui.VoucherRedeemActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.profile.ui.MyProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.profile.ui.EditProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.profile.ui.ChangePasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.setting.ui.SettingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.security.ui.SecurityActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.vexpoint.ui.VexPointActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.login.ui.ForgotPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.login.ui.GoogleAuthActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".widget.select.MultiSelectActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.security.ui.GoogleAuthSettingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.security.ui.GoogleAuthStateActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.profile.ui.KycActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.exchange.ui.ReceiveVoucherActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".module.vexpoint.ui.VexAddressActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.exchange.ui.SendVoucherActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.premium.ui.PremiumMemberActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.privacy.ui.PrivacyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.term.ui.TermActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.about.ui.AboutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".module.referral.ui.ReferralActivity"
            android:screenOrientation="portrait" />

        <service
            android:name=".fcm.VexFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_logo_notif" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/vex_orange" />

    </application>

</manifest>
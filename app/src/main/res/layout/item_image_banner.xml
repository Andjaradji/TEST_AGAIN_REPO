<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_coupon"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <RelativeLayout
        android:id="@+id/ll_banner"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="@dimen/interval_submain"
        android:layout_marginTop="@dimen/interval_content"
        android:layout_marginBottom="@dimen/interval_content"
        android:layout_marginRight="@dimen/interval_submain">

        <ImageView
            android:id="@+id/iv_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/ad_list_item_fb_frame_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/frame_ad_item"
            android:orientation="horizontal" />

    </RelativeLayout>

</LinearLayout>
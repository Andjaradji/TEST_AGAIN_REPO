<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test"
    tools:context=".module.walkthrough.ui.WalkthroughActivity">

    <ImageView
        android:id="@+id/v_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/shape_walkthrough1_bg">

    </ImageView>

    <com.vexanium.vexgift.widget.CustomViewPager
        android:id="@+id/cvp_walkthrough"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        app:piv_dynamicCount="true"
        app:piv_interactiveAnimation="true">

    </com.vexanium.vexgift.widget.CustomViewPager>

    <LinearLayout
        android:id="@+id/ll_walkthrough_next"
        android:layout_width="192dp"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_white_rounded_empty"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="56dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textSize="@dimen/text_big_medium"
            android:textColor="@color/material_white"/>

    </LinearLayout>

    <com.rd.PageIndicatorView
        android:id="@+id/pageIndicatorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_walkthrough_next"
        android:layout_centerHorizontal="true"
        app:piv_animationType="scale"
        app:piv_dynamicCount="true"
        app:piv_interactiveAnimation="true"
        app:piv_selectedColor="@color/material_white"
        app:piv_unselectedColor="@color/material_white_trans_ef"
        app:piv_viewPager="@id/cvp_walkthrough"
        app:piv_padding="@dimen/walkthrough_indicator_padding"
        app:piv_radius="@dimen/walkthrough_indicator_radius" />

</RelativeLayout>
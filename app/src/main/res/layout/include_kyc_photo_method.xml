<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_ripple_transparent"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/interval_submain"
        android:text="@string/kyc_from_camera"
        android:textAlignment="center"
        android:textColor="@color/material_black_text_color"
        android:textSize="@dimen/text_small_medium" />

    <TextView
        android:id="@+id/tv_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_ripple_transparent"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/interval_submain"
        android:text="@string/kyc_from_gallery"
        android:textAlignment="center"
        android:textColor="@color/material_black_text_color"
        android:textSize="@dimen/text_small_medium" />


</LinearLayout>
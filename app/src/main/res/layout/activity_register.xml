<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.login.ui.LoginActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/material_white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp">

                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/interval_content"
                    android:layout_marginStart="@dimen/interval_content"
                    android:padding="10dp"
                    android:src="@drawable/ic_back" />
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/interval_big"
                android:tag="black"
                android:text="Almost There !"
                android:textColor="@color/material_black_text_color"
                android:textSize="@dimen/text_title"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/interval_medium"
                android:layout_marginLeft="@dimen/interval_big"
                android:text="We are excited to see you here"
                android:textColor="@color/material_black_text_color"
                android:textSize="@dimen/text_medium"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/interval_main"
                android:layout_marginLeft="@dimen/interval_main"
                android:layout_marginRight="@dimen/interval_main">

                <LinearLayout
                    android:id="@+id/ll_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shape_ripple_transparent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/interval_content"
                        android:paddingLeft="@dimen/interval_small"
                        android:paddingRight="@dimen/interval_small"
                        android:paddingTop="@dimen/interval_content"
                        android:tag="bold"
                        android:text="Login with Email"
                        android:textSize="@dimen/text_xtiny" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_phone_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shape_ripple_transparent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/interval_content"
                        android:paddingLeft="@dimen/interval_small"
                        android:paddingRight="@dimen/interval_small"
                        android:paddingTop="@dimen/interval_content"
                        android:text="Login with Phone Number"
                        android:textSize="@dimen/text_xtiny" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_phone_number_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_button"
                android:layout_marginLeft="@dimen/interval_big"
                android:layout_marginRight="@dimen/interval_big"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/interval_content"
                    android:gravity="center">

                    <com.rilixtech.CountryCodePicker
                        android:id="@+id/ccp_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/interval_content"
                        app:ccp_hideNameCode="true"
                        app:ccp_showFullName="false">

                    </com.rilixtech.CountryCodePicker>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_field_input_2">

                    <EditText
                        android:id="@+id/et_phone"
                        style="@style/register_login_edittext_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/login_phone"
                        android:inputType="phone" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_button"
                android:id="@+id/ll_email_field"
                android:layout_marginLeft="@dimen/interval_big"
                android:layout_marginRight="@dimen/interval_big"
                android:background="@drawable/shape_field_input_2"
                android:visibility="visible">

                <EditText
                    android:id="@+id/et_email"
                    style="@style/register_login_edittext_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/login_email"
                    android:inputType="textEmailAddress" />
            </LinearLayout>

            <LinearLayout
                style="@style/register_login_et_container_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_username"
                    style="@style/register_login_edittext_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/register_username"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                style="@style/register_login_et_container_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_password"
                    style="@style/register_login_edittext_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/register_password"
                    android:inputType="textPassword" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/register_login_et_container_style">

                <EditText
                    android:id="@+id/et_repassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/register_login_edittext_style"
                    android:hint="@string/register_repassword"
                    android:inputType="textPassword"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_referral_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/register_login_et_container_style"
                android:visibility="gone">

                <EditText
                    android:id="@+id/et_referral_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/register_referral_code"
                    android:inputType="text"
                    style="@style/register_login_edittext_style" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/register_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/interval_big"
                android:layout_marginLeft="@dimen/interval_big"
                android:layout_marginRight="@dimen/interval_big"
                android:background="@drawable/shape_main_button">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/padding_submain"
                    android:layout_marginTop="@dimen/padding_submain"
                    android:tag="bold"
                    android:text="@string/register_button_register"
                    android:textColor="@color/material_white"
                    android:textSize="@dimen/text_small_medium" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/login_fake_fb_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/interval_main"
                android:layout_marginTop="@dimen/interval_big"
                android:layout_marginLeft="@dimen/interval_big"
                android:layout_marginRight="@dimen/interval_big"
                android:visibility="gone"
                android:gravity="center"
                android:orientation="horizontal">

                <com.facebook.login.widget.LoginButton
                    android:id="@+id/login_fb_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/login_google_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/interval_main"
                android:layout_marginLeft="@dimen/interval_big"
                android:visibility="gone"
                android:layout_marginRight="@dimen/interval_big"
                android:background="@color/material_red_4F39"
                android:orientation="horizontal"
                android:padding="4dp">

                <ImageView
                    android:layout_width="@dimen/icon_google"
                    android:layout_height="@dimen/icon_google"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/interval_small"
                    android:src="@drawable/ic_gg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/login_button_google_login"
                    android:textColor="@color/material_white"
                    android:textSize="@dimen/text_small" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/interval_big"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_already_have_account"
                    android:textColor="@color/material_black_sub_text_color"
                    android:textSize="@dimen/text_tiny" />

                <TextView
                    android:id="@+id/register_login_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/interval_small"
                    android:layout_marginStart="@dimen/interval_small"
                    android:text="@string/register_login_here"
                    android:textColor="@color/material_black_sub_text_color"
                    android:textSize="@dimen/text_tiny" />
            </LinearLayout>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <include layout="@layout/include_loading_view" />

</RelativeLayout>

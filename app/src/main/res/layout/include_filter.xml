<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp">


    <LinearLayout
        android:id="@+id/ll_sort_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <RelativeLayout
            android:id="@+id/rl_sort_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_sort_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:tag="hnMed"
                android:text="@string/sort_title"
                android:textColor="@color/material_black"
                android:textSize="@dimen/text_title" />

            <TextView
                android:id="@+id/tv_sort_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/reset"
                android:textColor="@color/material_blue_2D7C"
                android:textSize="@dimen/text_xtiny" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_sort_body"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tv_sort_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingBottom="4dp"
                android:text="@string/sort_by"
                android:textColor="@color/material_grey_8080"
                android:textSize="@dimen/text_small_medium" />

            <Spinner
                android:id="@+id/spin_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:prompt="@string/sort_popularity">

            </Spinner>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/material_grey_E8E8E8" />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_filter_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <RelativeLayout
            android:id="@+id/rl_filter_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_filter_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:tag="hnMed"
                android:text="@string/filter_title"
                android:textColor="@color/material_black"
                android:textSize="@dimen/text_title" />

            <TextView
                android:id="@+id/tv_filter_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/reset"
                android:textColor="@color/material_blue_2D7C"
                android:textSize="@dimen/text_xtiny" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/filter_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/interval_main"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_filter_type_header"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/tv_filter_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:paddingBottom="4dp"
                    android:text="@string/filter_type"
                    android:textColor="@color/material_grey_8080"
                    android:textSize="@dimen/text_small_medium" />

                <ImageView
                    android:id="@+id/iv_filter_type_add_more"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/interval_small"
                    android:scaleType="fitCenter"
                    android:src="@drawable/add_more">

                </ImageView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/material_grey_E8E8E8" />
            </RelativeLayout>

            <com.vexanium.vexgift.widget.tag.TagView
                android:id="@+id/tg_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.vexanium.vexgift.widget.tag.TagView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/filter_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/interval_main"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_filter_category_header"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/tv_filter_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:paddingBottom="4dp"
                    android:text="@string/filter_category"
                    android:textColor="@color/material_grey_8080"
                    android:textSize="@dimen/text_small_medium" />

                <ImageView
                    android:id="@+id/iv_filter_category_add_more"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/interval_small"
                    android:scaleType="fitCenter"
                    android:src="@drawable/add_more">

                </ImageView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/material_grey_E8E8E8" />
            </RelativeLayout>

            <com.vexanium.vexgift.widget.tag.TagView
                android:id="@+id/tg_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.vexanium.vexgift.widget.tag.TagView>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/filter_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/interval_main"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_filter_location_header"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/tv_filter_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:paddingBottom="4dp"
                    android:text="@string/filter_location"
                    android:textColor="@color/material_grey_8080"
                    android:textSize="@dimen/text_small_medium" />

                <ImageView
                    android:id="@+id/iv_filter_location_add_more"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/interval_small"
                    android:scaleType="fitCenter"
                    android:src="@drawable/add_more">

                </ImageView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/material_grey_E8E8E8" />

            </RelativeLayout>

            <com.vexanium.vexgift.widget.tag.TagView
                android:id="@+id/tg_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.vexanium.vexgift.widget.tag.TagView>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
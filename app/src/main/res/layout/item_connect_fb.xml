<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_connect_account"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/interval_main"
    android:paddingRight="@dimen/interval_main"
    android:paddingTop="@dimen/interval_big">

    <TextView
        android:id="@+id/tv_cconnect_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_item_connect_account"
        android:textColor="@color/material_black"
        android:textSize="@dimen/text_big_medium"
        android:tag="hnMed"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/interval_main"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/kyc_illustration"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/interval_main"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_connect_fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_item_connect_fb"
                android:textColor="@color/material_black"
                android:textSize="@dimen/text_medium"
                android:layout_marginBottom="@dimen/interval_xsmall"
                android:tag="hnMed"/>

            <TextView
                android:id="@+id/tv_connect_fb_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_item_connect_fb_detail"
                android:textColor="@color/material_grey_400"
                android:textSize="@dimen/text_medium"
                android:tag="hnMed"/>

            <LinearLayout
                android:id="@+id/ll_connect_fb_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/interval_content"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/shape_ripple_small_button">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="bold"
                    android:text="@string/home_item_connect_now"
                    android:textColor="@color/material_white"
                    android:paddingLeft="@dimen/interval_main"
                    android:paddingRight="@dimen/interval_main"
                    android:paddingTop="@dimen/interval_small"
                    android:paddingBottom="@dimen/interval_small"
                    android:textSize="@dimen/text_xxtiny" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/interval_big"
        android:background="@color/lineColor"></View>

</LinearLayout>
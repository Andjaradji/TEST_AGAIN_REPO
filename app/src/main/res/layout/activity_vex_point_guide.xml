<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attrs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/material_black"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_main_bg">

        <LinearLayout
            android:id="@+id/invite_card_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="18dp">

            <ImageView
                android:layout_width="@dimen/icon_tiny"
                android:layout_height="@dimen/icon_tiny"
                android:src="@drawable/ico_close_white" />
        </LinearLayout>

        <TextView
            android:id="@+id/invite_card_h1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/viewPagerContainer"
            android:layout_marginBottom="-40dp"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:lineSpacingMultiplier="1"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            android:textAlignment="center"
            android:textColor="@color/material_white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/viewPagerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:paddingTop="52dp">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingBottom="0dp"
                android:paddingEnd="35dp"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:paddingStart="35dp"
                android:paddingTop="0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <com.rd.PageIndicatorView
                    android:id="@+id/invite_card_pager_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    attrs:piv_animationType="worm"
                    attrs:piv_interactiveAnimation="true" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>

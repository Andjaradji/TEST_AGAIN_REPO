<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_referral_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_ripple_transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:paddingBottom="@dimen/interval_content"
        android:paddingLeft="@dimen/interval_main"
        android:paddingRight="@dimen/interval_main"
        android:paddingTop="@dimen/interval_content">

        <LinearLayout
            android:id="@+id/ll_deposit_history_text_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_referral_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="2dp"
                android:tag="bold"
                android:textColor="@color/material_black"
                android:textSize="@dimen/text_medium" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/material_grey_8080"
                android:textSize="@dimen/text_xxtiny" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical|end">

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:rotation="270"
                android:src="@drawable/ic_back"
                android:tint="@color/material_black_sub_text_color" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_detail"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_content"
            android:paddingRight="@dimen/padding_content">

            <ImageView
                android:id="@+id/iv_kyc"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="@dimen/padding_small"
                android:src="@drawable/ic_checked_green" />

            <TextView
                android:id="@+id/tv_already_kyc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_content"
                android:text="@string/referral_detail_already_kyc"
                android:textSize="@dimen/text_xtiny" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_content"
            android:paddingRight="@dimen/padding_content">

            <ImageView
                android:id="@+id/iv_pm"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="@dimen/padding_small"
                android:src="@drawable/ic_checked_green" />

            <TextView
                android:id="@+id/tv_pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_content"
                android:text="@string/referral_detail_already_buy_premium_member"
                android:textSize="@dimen/text_xtiny" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/interval_content"
        android:layout_marginLeft="@dimen/interval_content"
        android:layout_marginRight="@dimen/interval_content"
        android:layout_marginTop="@dimen/padding_small"
        android:background="@color/lineColor" />

</LinearLayout>
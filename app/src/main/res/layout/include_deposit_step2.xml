<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_phase_2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/interval_main">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/interval_content"
        android:tag="bold"
        android:text="@string/deposit_step2_send_to"
        android:textSize="@dimen/text_tiny"
        android:textColor="@color/material_black_text_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/interval_main"
        android:background="@drawable/shape_ripple_orange_rounded"
        android:gravity="center"
        android:padding="@dimen/interval_main">

        <TextView
            android:id="@+id/tv_vex_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="bold"
            android:textColor="@color/material_black_text_color"
            android:textSize="@dimen/text_title" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/material_red_4F39"
        android:textSize="@dimen/text_tiny"
        android:layout_marginTop="@dimen/interval_content"
        android:layout_marginBottom="@dimen/interval_big"
        android:text="@string/deposit_note"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/interval_content"
        android:tag="bold"
        android:text="@string/deposit_step2_to_address"
        android:textSize="@dimen/text_tiny"
        android:textColor="@color/material_black_text_color" />

    <LinearLayout
        android:id="@+id/ll_address_send_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/interval_big"
        android:background="@drawable/shape_white_round_rect_with_black_border"
        android:gravity="center"
        android:padding="@dimen/interval_main">

        <TextView
            android:id="@+id/tv_address_send_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="bold"
            android:textColor="@color/material_black_text_color"
            android:textSize="@dimen/text_xtiny" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/interval_content"
        android:tag="bold"
        android:text="@string/deposit_step2_time_left"
        android:textSize="@dimen/text_tiny"
        android:textColor="@color/material_black_text_color" />

    <TextView
        android:id="@+id/tv_time_left_deposit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/interval_main"
        android:tag="bold"
        android:textAlignment="center"
        android:textColor="@color/material_black_text_color"
        android:textSize="20sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/interval_content"
        android:visibility="visible"
        android:layout_marginTop="@dimen/interval_submain"
        android:tag="bold"
        android:text="Note :"
        android:textColor="@color/material_black_text_color" />

    <TextView
        android:id="@+id/tv_note_step2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/material_black_text_color"
        android:textSize="@dimen/text_xtiny" />
</LinearLayout>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    app:umanoPanelHeight="0dp"
    tools:context=".module.voucher.ui.VoucherActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="0dp"
                android:contentInsetEnd="0dp"
                android:contentInsetLeft="0dp"
                android:contentInsetRight="0dp"
                android:contentInsetStart="0dp"
                android:padding="0dp"
                app:contentInsetEnd="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetStart="0dp">

                <include layout="@layout/content_toolbar_voucher" />

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recylerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/app_bar"
            tools:listitem="@layout/item_coupon_list"
            android:background="@color/material_white">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/token_open_filter_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:gravity="end|bottom|right"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_filter_button">

            <ImageView
                android:layout_width="@dimen/icon_filter"
                android:layout_height="@dimen/icon_filter"
                android:layout_margin="8dp"
                android:src="@drawable/ic_filter" />

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/dragview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical"
        android:background="@drawable/shape_filter_bg">

        <com.vexanium.vexgift.widget.LockableScrollView
            android:id="@+id/voucher_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <LinearLayout
                    android:id="@+id/ll_sort_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="16dp"
                    android:layout_alignParentTop="true">

                    <RelativeLayout
                        android:id="@+id/rl_sort_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_sort_title"
                            android:text="@string/sort_title"
                            android:textSize="@dimen/text_title"
                            android:textColor="@color/material_black"
                            android:tag="hnMed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:id="@+id/tv_sort_reset"
                            android:text="@string/reset"
                            android:textSize="@dimen/text_xtiny"
                            android:textColor="@color/material_blue_2D7C"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_sort_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/tv_sort_by"
                            android:text="@string/sort_by"
                            android:textSize="@dimen/text_small_medium"
                            android:textColor="@color/material_grey_8080"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="4dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"/>

                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/spin_sort"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:prompt="@string/sort_popularity"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true">

                        </android.support.v7.widget.AppCompatSpinner>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/material_grey_E8E8E8"
                            android:layout_alignParentBottom="true"
                            />

                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_filter_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="16dp"
                    android:layout_alignParentTop="true">

                    <RelativeLayout
                        android:id="@+id/rl_filter_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_filter_title"
                            android:text="@string/filter_title"
                            android:textSize="@dimen/text_title"
                            android:textColor="@color/material_black"
                            android:tag="hnMed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:id="@+id/tv_filter_reset"
                            android:text="@string/reset"
                            android:textSize="@dimen/text_xtiny"
                            android:textColor="@color/material_blue_2D7C"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_filter_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">

                        <RelativeLayout
                            android:id="@+id/rl_filter_category_header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_filter_category"
                                android:text="@string/filter_category"
                                android:textSize="@dimen/text_small_medium"
                                android:textColor="@color/material_grey_8080"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="4dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"/>

                            <ImageView
                                android:id="@+id/iv_filter_category_add_more"
                                android:src="@drawable/add_more"
                                android:scaleType="fitCenter"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true">

                            </ImageView>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/material_grey_E8E8E8"
                                android:layout_alignParentBottom="true"
                                />

                        </RelativeLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_filter_category"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:layout_below="@id/rl_filter_category_header">
                        </android.support.v7.widget.RecyclerView>

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rl_filter_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">

                        <RelativeLayout
                            android:id="@+id/rl_filter_location_header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp">

                            <TextView
                                android:id="@+id/tv_filter_location"
                                android:text="@string/filter_location"
                                android:textSize="@dimen/text_small_medium"
                                android:textColor="@color/material_grey_8080"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="4dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"/>

                            <ImageView
                                android:id="@+id/iv_filter_location_add_more"
                                android:src="@drawable/add_more"
                                android:scaleType="fitCenter"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true">

                            </ImageView>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/material_grey_E8E8E8"
                                android:layout_alignParentBottom="true"
                                />

                        </RelativeLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_filter_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:layout_below="@id/rl_filter_location_header">
                        </android.support.v7.widget.RecyclerView>

                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

        </com.vexanium.vexgift.widget.LockableScrollView>

    </LinearLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_main_bg"
    tools:context=".module.splash.ui.SplashActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_main_logo"
            android:scaleType="fitCenter"
            android:layout_width="@dimen/main_icon_width"
            android:layout_height="@dimen/main_icon_height"
            android:src="@drawable/big_logo"
            android:layout_marginBottom="@dimen/margin_splash"/>

        <!--font hasnt been set-->
        <TextView
            android:id="@+id/tv_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_xlarge"
            android:visibility="gone"
            android:textColor="@color/material_white"
            android:text="@string/app_title"
            android:textAllCaps="true"/>

    </LinearLayout>

    <!--font hasnt been set-->
    <TextView
        android:id="@+id/tv_main_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_tiny"
        android:textColor="@color/material_white"
        android:text="@string/app_copyright"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_splash"/>

</RelativeLayout>
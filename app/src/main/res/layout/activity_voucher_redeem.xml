<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".module.voucher.ui.VoucherRedeemActivity">


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/voucher_detail_heading_height"
                android:fitsSystemWindows="true"
                app:contentScrim="@color/material_white"
                app:expandedTitleGravity="top"
                app:expandedTitleMarginEnd="64dp"
                app:expandedTitleMarginStart="48dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/voucher_detail_heading_height"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.7">

                    <ImageView
                        android:id="@+id/iv_coupon_image"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/voucher_detail_heading_height"
                        android:transitionName="voucher_image" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_black_trans"></View>

                </RelativeLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_margin="0dp"
                    android:contentInsetEnd="0dp"
                    android:contentInsetLeft="0dp"
                    android:contentInsetRight="0dp"
                    android:contentInsetStart="0dp"
                    android:padding="0dp"
                    app:contentInsetEnd="0dp"
                    app:contentInsetLeft="0dp"
                    app:contentInsetRight="0dp"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/AppTheme.PopupOverlay"
                    app:titleTextColor="@color/material_black">

                    <include layout="@layout/content_toolbar_voucher_redeem" />

                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/material_white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_scrollFlags="scroll|enterAlways">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lineColor"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/interval_main">

                    <ImageView
                        android:id="@+id/iv_brand_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="8dp"
                        android:contentDescription="@string/image_content_description" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/iv_brand_image"
                        android:layout_toRightOf="@id/iv_brand_image"
                        android:orientation="vertical"
                        android:paddingEnd="4dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="4dp"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/tv_brand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/material_black_text_color"
                            android:textSize="@dimen/text_small_medium" />

                        <TextView
                            android:id="@+id/tv_coupon_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tag="bold"
                            android:textColor="@color/material_black_text_color"
                            android:textSize="@dimen/text_title" />

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:tag="light"
                            android:textColor="@color/material_black_text_color"
                            android:textSize="@dimen/text_xtiny" />

                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/margin_more_line"
                    android:layout_marginEnd="@dimen/interval_main"
                    android:layout_marginLeft="@dimen/interval_main"
                    android:layout_marginRight="@dimen/interval_main"
                    android:layout_marginStart="@dimen/interval_main"
                    android:layout_marginTop="@dimen/margin_more_line"
                    android:background="@color/lineColor" />

                <LinearLayout
                    android:id="@+id/ll_voucher_show_to_merchant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_qr_code"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="@dimen/interval_main"
                        android:background="@drawable/shape_white_round_rect_with_grey_border"
                        android:contentDescription="@string/image_content_description"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/tv_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/interval_small"
                        android:layout_marginTop="@dimen/interval_main"
                        android:tag="bold"
                        android:textColor="@color/material_black_text_color"
                        android:textSize="@dimen/text_medium" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_online_voucher_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_online_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/interval_small"
                        android:layout_marginTop="@dimen/interval_small"
                        android:tag="bold"
                        android:textColor="@color/material_black_text_color"
                        android:textSize="@dimen/text_medium" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_voucher_inactived"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_voucher_inactive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/interval_small"
                        android:layout_marginTop="@dimen/interval_main"
                        android:tag="bold"
                        android:text="@string/coupon_redeemed"
                        android:textColor="@color/material_black_text_color"
                        android:textSize="@dimen/text_medium" />

                    <TextView
                        android:id="@+id/tv_inactive_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/interval_main"
                        android:tag="bold"
                        android:textColor="@color/material_red_4F39"
                        android:textSize="@dimen/text_small" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_voucher_with_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/interval_small"
                        android:text="We will send to "
                        android:textAlignment="center"
                        android:textColor="@color/material_black_text_color"
                        android:textSize="@dimen/text_tiny" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="@dimen/interval_medium"
                        android:layout_marginEnd="@dimen/interval_main"
                        android:layout_marginLeft="@dimen/interval_main"
                        android:layout_marginRight="@dimen/interval_main"
                        android:layout_marginStart="@dimen/interval_main"
                        android:background="@drawable/shape_voucher_availability"
                        android:gravity="left|center_vertical">

                        <TextView
                            android:id="@+id/tv_address_sent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/interval_small"
                            android:textAlignment="center"
                            android:textColor="@color/material_black_text_color"
                            android:textSize="@dimen/text_tiny" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_countdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/interval_medium"
                    android:layout_marginEnd="@dimen/interval_main"
                    android:layout_marginLeft="@dimen/interval_main"
                    android:layout_marginRight="@dimen/interval_main"
                    android:layout_marginStart="@dimen/interval_main"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/interval_small"
                        android:text="@string/coupon_redeem_availability"
                        android:textColor="@color/material_black_text_color"
                        android:textSize="@dimen/text_tiny" />

                    <TextView
                        android:id="@+id/tv_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="bold"
                        android:textColor="@color/material_black_text_color"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="bold"
                        android:textColor="@color/material_black_text_color"
                        android:textSize="@dimen/text_title" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_voucher_active"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/interval_main"
                            android:text="@string/coupon_redeem_voucher_code"
                            android:textColor="@color/material_black_text_color"
                            android:textSize="@dimen/text_tiny" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="@dimen/interval_main"
                            android:tag="light"
                            android:text="@string/coupon_redeem_voucher_code_warning"
                            android:textColor="@color/material_black_text_color"
                            android:textSize="@dimen/text_tiny" />
                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="@dimen/interval_medium"
                        android:layout_marginEnd="@dimen/interval_main"
                        android:layout_marginLeft="@dimen/interval_main"
                        android:layout_marginRight="@dimen/interval_main"
                        android:layout_marginStart="@dimen/interval_main"
                        android:background="@drawable/shape_voucher_availability"
                        android:gravity="left|center_vertical">

                        <EditText
                            android:id="@+id/et_merchant_code"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transparent"
                            android:gravity="center"
                            android:hint="@string/coupon_redeem_voucher_code_field"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_small_medium" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_token_active"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/interval_main"
                            android:text="@string/token_address_field"
                            android:textColor="@color/material_black_text_color"
                            android:textSize="@dimen/text_tiny" />

                        <TextView
                            android:id="@+id/tv_address_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="@dimen/interval_main"
                            android:tag="light"
                            android:textColor="@color/material_black_text_color"
                            android:textSize="@dimen/text_tiny" />
                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="@dimen/interval_medium"
                        android:layout_marginEnd="@dimen/interval_main"
                        android:layout_marginLeft="@dimen/interval_main"
                        android:layout_marginRight="@dimen/interval_main"
                        android:layout_marginStart="@dimen/interval_main"
                        android:background="@drawable/shape_voucher_availability"
                        android:gravity="left|center_vertical">

                        <EditText
                            android:id="@+id/et_address"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transparent"
                            android:gravity="center"
                            android:hint="@string/coupon_redeem_voucher_code_field"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_small_medium" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/margin_more_line"
                    android:layout_marginEnd="@dimen/interval_main"
                    android:layout_marginLeft="@dimen/interval_main"
                    android:layout_marginRight="@dimen/interval_main"
                    android:layout_marginStart="@dimen/interval_main"
                    android:layout_marginTop="@dimen/margin_more_line"
                    android:background="@color/lineColor" />

                <LinearLayout
                    android:id="@+id/ll_merchant_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="100dp"
                    android:orientation="vertical"
                    android:paddingEnd="@dimen/interval_main"
                    android:paddingLeft="@dimen/interval_main"
                    android:paddingRight="@dimen/interval_main"
                    android:paddingStart="@dimen/interval_main"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_merchant_info_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="bold"
                        android:text="@string/merchant_info_title"
                        android:textColor="@color/material_black_text_color"
                        android:textSize="@dimen/text_title" />

                    <TextView
                        android:id="@+id/tv_merchant_info_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/interval_submain"
                        android:layout_marginTop="4dp"
                        android:text="@string/merchant_info_desc"
                        android:textColor="@color/material_black_text_color"
                        android:textSize="@dimen/text_tiny" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_online_voucher_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/interval_main"
                    android:orientation="vertical"
                    android:paddingEnd="@dimen/interval_main"
                    android:paddingLeft="@dimen/interval_main"
                    android:paddingRight="@dimen/interval_main"
                    android:paddingStart="@dimen/interval_main"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_online_voucher_info_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="bold"
                        android:text="@string/merchant_info_title"
                        android:textColor="@color/material_black_text_color"
                        android:textSize="@dimen/text_title" />

                    <TextView
                        android:id="@+id/tv_online_voucher_info_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/interval_submain"
                        android:layout_marginTop="4dp"
                        android:text="@string/merchant_info_desc"
                        android:textColor="@color/material_black_text_color"
                        android:textSize="@dimen/text_tiny" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_voucher_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="100dp"
                    android:orientation="vertical"
                    android:paddingEnd="@dimen/interval_main"
                    android:paddingLeft="@dimen/interval_main"
                    android:paddingRight="@dimen/interval_main"
                    android:paddingStart="@dimen/interval_main">

                    <TextView
                        android:id="@+id/tv_desc_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="bold"
                        android:text="@string/coupon_detail_desc_title"
                        android:textColor="@color/material_black_text_color"
                        android:textSize="@dimen/text_title" />

                    <TextView
                        android:id="@+id/tv_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/interval_submain"
                        android:layout_marginTop="4dp"
                        android:textIsSelectable="true"
                        android:textColor="@color/material_black_text_color"
                        android:textSize="@dimen/text_tiny" />

                    <TextView
                        android:id="@+id/tv_terms_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/interval_main"
                        android:tag="bold"
                        android:text="@string/coupon_detail_terms_title"
                        android:textColor="@color/material_black_text_color"
                        android:textSize="@dimen/text_title" />

                    <TextView
                        android:id="@+id/tv_terms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/interval_main"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/material_black_text_color"
                        android:textSize="@dimen/text_tiny" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>


    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/ll_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/shape_white_trans_button_bg"></View>

        <LinearLayout
            android:id="@id/white_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/material_white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/btn_redeem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/interval_main"
                android:layout_marginEnd="@dimen/interval_main"
                android:layout_marginLeft="@dimen/interval_main"
                android:layout_marginRight="@dimen/interval_main"
                android:layout_marginStart="@dimen/interval_main"
                android:layout_marginTop="@dimen/interval_small"
                android:background="@drawable/shape_ripple_main_button"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/interval_submain"
                    android:tag="bold"
                    android:text="@string/coupon_redeem_voucher"
                    android:textColor="@color/material_white"
                    android:textSize="@dimen/text_title" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.more.ui.MoreFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="0dp"
                android:contentInsetEnd="0dp"
                android:contentInsetLeft="0dp"
                android:contentInsetRight="0dp"
                android:contentInsetStart="0dp"
                android:padding="0dp"
                app:contentInsetEnd="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetStart="0dp">

                <include layout="@layout/content_toolbar" />

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/app_bar"
            android:background="@color/material_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/interval_main">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_more_list"
                    android:tag="bold"
                    android:text="Account"
                    android:textColor="@color/material_black_text_color"
                    android:textSize="@dimen/text_title" />

                <TextView
                    android:id="@+id/more_myprofile_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_more_list"
                    android:text="My Profile"
                    android:clickable="true"
                    android:focusable="true"
                    android:textColor="@color/material_black_text_color"
                    android:background="@drawable/shape_ripple_transparent"
                    android:textSize="@dimen/text_small_medium" />

                <TextView
                    android:id="@+id/more_setting_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_more_list"
                    android:text="Setting"
                    android:clickable="true"
                    android:focusable="true"
                    android:textColor="@color/material_black_text_color"
                    android:background="@drawable/shape_ripple_transparent"
                    android:textSize="@dimen/text_small_medium" />

                <TextView
                    android:id="@+id/more_change_password_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_more_list"
                    android:text="Change Password"
                    android:clickable="true"
                    android:focusable="true"
                    android:textColor="@color/material_black_text_color"
                    android:background="@drawable/shape_ripple_transparent"
                    android:textSize="@dimen/text_small_medium" />

                <TextView
                    android:id="@+id/more_security_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_more_list"
                    android:text="Security"
                    android:clickable="true"
                    android:focusable="true"
                    android:textColor="@color/material_black_text_color"
                    android:background="@drawable/shape_ripple_transparent"
                    android:textSize="@dimen/text_small_medium" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/margin_more_line"
                    android:layout_marginTop="@dimen/margin_more_line"
                    android:background="@color/lineColor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_more_list"
                    android:tag="bold"
                    android:text="Others"
                    android:textColor="@color/material_black_text_color"
                    android:textSize="@dimen/text_title" />

                <TextView
                    android:id="@+id/more_merchant_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_more_list"
                    android:text="Merchant List"
                    android:clickable="true"
                    android:focusable="true"
                    android:textColor="@color/material_black_text_color"
                    android:background="@drawable/shape_ripple_transparent"
                    android:textSize="@dimen/text_small_medium" />

                <TextView
                    android:id="@+id/more_feedback_buttton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_more_list"
                    android:text="Send Feedback"
                    android:clickable="true"
                    android:focusable="true"
                    android:textColor="@color/material_black_text_color"
                    android:background="@drawable/shape_ripple_transparent"
                    android:textSize="@dimen/text_small_medium" />

                <TextView
                    android:id="@+id/more_problem_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_more_list"
                    android:text="Report a Problem"
                    android:clickable="true"
                    android:focusable="true"
                    android:textColor="@color/material_black_text_color"
                    android:background="@drawable/shape_ripple_transparent"
                    android:textSize="@dimen/text_small_medium" />

                <TextView
                    android:id="@+id/more_gp_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_more_list"
                    android:text="Rate Us On Google Play"
                    android:clickable="true"
                    android:focusable="true"
                    android:textColor="@color/material_black_text_color"
                    android:background="@drawable/shape_ripple_transparent"
                    android:textSize="@dimen/text_small_medium" />

                <TextView
                    android:id="@+id/more_about_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_more_list"
                    android:text="About Us"
                    android:clickable="true"
                    android:focusable="true"
                    android:textColor="@color/material_black_text_color"
                    android:background="@drawable/shape_ripple_transparent"
                    android:textSize="@dimen/text_small_medium" />

                <TextView
                    android:id="@+id/more_privacy_policy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_more_list"
                    android:text="Privacy Policy"
                    android:clickable="true"
                    android:focusable="true"
                    android:textColor="@color/material_black_text_color"
                    android:background="@drawable/shape_ripple_transparent"
                    android:textSize="@dimen/text_small_medium" />

                <TextView
                    android:id="@+id/more_terms_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_more_list"
                    android:text="Terms of Service"
                    android:clickable="true"
                    android:focusable="true"
                    android:textColor="@color/material_black_text_color"
                    android:background="@drawable/shape_ripple_transparent"
                    android:textSize="@dimen/text_small_medium" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/margin_more_line"
                    android:layout_marginTop="@dimen/margin_more_line"
                    android:background="@color/lineColor" />

                <TextView
                    android:id="@+id/more_logout_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_more_list"
                    android:text="Log Out"
                    android:clickable="true"
                    android:focusable="true"
                    android:textColor="@color/material_black_text_color"
                    android:background="@drawable/shape_ripple_transparent"
                    android:textSize="@dimen/text_small_medium" />


            </LinearLayout>
        </ScrollView>
    </RelativeLayout>



</FrameLayout>
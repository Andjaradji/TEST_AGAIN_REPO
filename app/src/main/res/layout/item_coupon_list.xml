<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_coupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/interval_content"
        android:layout_marginEnd="@dimen/interval_main"
        android:layout_marginLeft="@dimen/interval_main"
        android:layout_marginRight="@dimen/interval_main"
        android:layout_marginStart="@dimen/interval_main"
        android:layout_marginTop="@dimen/interval_content">

        <ImageView
            android:id="@+id/iv_coupon_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/voucher_image_height"
            android:contentDescription="@string/image_content_description"
            android:scaleType="centerCrop"
            android:transitionName="voucher_image" />

        <ImageView
            android:id="@+id/iv_premium"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/image_content_description"
            android:src="@drawable/premium_label" />

        <RelativeLayout
            android:id="@+id/rl_banner_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/voucher_text_container_height"
            android:layout_below="@id/iv_coupon_image"
            android:layout_marginBottom="6dp"
            android:orientation="vertical"
            android:paddingEnd="@dimen/interval_main"
            android:paddingLeft="@dimen/interval_main"
            android:paddingRight="@dimen/interval_main"
            android:paddingStart="@dimen/interval_main">

            <TextView
                android:id="@+id/tv_coupon_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/ll_banner_exp_info"
                android:maxLines="2"
                android:paddingEnd="@dimen/interval_main"
                android:paddingRight="@dimen/interval_main"
                android:tag="bold"
                android:textColor="@color/material_black_text_color"
                android:textSize="@dimen/text_small_medium" />

            <LinearLayout
                android:id="@id/ll_banner_exp_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="end"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_price_bg"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="bold"
                        android:text="1200 VP"
                        android:textColor="@color/material_white"
                        android:textSize="@dimen/text_xtiny" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_coupon_exp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/interval_small"
                    android:tag="bold"
                    android:textColor="@color/material_black_text_color"
                    android:textSize="@dimen/text_xtiny" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ad_list_item_fb_frame_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/voucher_frame_height"
            android:background="@drawable/frame_ad_item"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:background="@drawable/shape_white_round_rect"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_brand_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp" />
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_label"
        android:layout_width="126dp"
        android:layout_height="38dp"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/rect_label"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_label"
            android:layout_width="wrap_content"
            android:tag="bold"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:textColor="@color/text_discount_color"
            android:textSize="@dimen/text_xtiny" />
    </LinearLayout>
</RelativeLayout>
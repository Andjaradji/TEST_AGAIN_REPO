<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginTop="6dp"
    android:background="@color/material_white_dd"
    android:orientation="vertical"
    android:paddingBottom="@dimen/interval_small"
    android:paddingEnd="@dimen/interval_main"
    android:paddingStart="@dimen/interval_main"
    android:paddingTop="@dimen/interval_small">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/interval_main"
        android:tag="bold"
        android:text="Deposit Loyalty 5% - 6 Week"
        android:textAlignment="center"
        android:textColor="@color/material_black_text_color"
        android:textSize="@dimen/text_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/rect_shadow"
        android:orientation="vertical"
        android:padding="@dimen/interval_submain">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/interval_small"
            android:text="Description"
            android:textColor="@color/material_black_sub_text_color"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/interval_small"
            android:textColor="@color/material_black_text_color"
            android:textSize="@dimen/text_xtiny" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/interval_small"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:background="@drawable/rect_shadow"
            android:orientation="vertical"
            android:padding="@dimen/interval_submain">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/interval_small"
                android:text="Start"
                android:textSize="@dimen/text_xtiny" />

            <TextView
                android:id="@+id/tv_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/interval_small"
                android:tag="bold"
                android:textColor="@color/material_black_text_color"
                android:textSize="@dimen/text_xtiny" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="2dp"

            android:layout_weight="1"
            android:background="@drawable/rect_shadow"
            android:orientation="vertical"
            android:padding="@dimen/interval_submain">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/interval_small"
                android:text="End"
                android:textSize="@dimen/text_xtiny" />

            <TextView
                android:id="@+id/tv_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/interval_small"
                android:tag="bold"
                android:textColor="@color/material_black_text_color"
                android:textSize="@dimen/text_xtiny" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/interval_small"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:background="@drawable/rect_shadow"
            android:orientation="vertical"
            android:padding="@dimen/interval_submain">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/interval_small"
                android:text="Coin Deposited"
                android:textSize="@dimen/text_xtiny" />

            <TextView
                android:id="@+id/tv_coin_deposited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/interval_small"
                android:tag="bold"
                android:textColor="@color/material_black_text_color"
                android:textSize="@dimen/text_xtiny" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="2dp"
            android:layout_weight="1"
            android:background="@drawable/rect_shadow"
            android:orientation="vertical"
            android:padding="@dimen/interval_submain">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/interval_small"
                android:text="Max Coin Deposit"
                android:textSize="@dimen/text_xtiny" />

            <TextView
                android:id="@+id/tv_max_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/interval_small"
                android:tag="bold"
                android:textColor="@color/material_black_text_color"
                android:textSize="@dimen/text_xtiny" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_deposit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/interval_main"
        android:layout_marginTop="@dimen/interval_small"
        android:background="@drawable/shape_ripple_main_button"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/interval_submain"
            android:tag="bold"
            android:text="@string/deposit_button"
            android:textColor="@color/material_white"
            android:textSize="@dimen/text_small" />
    </LinearLayout>
</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/interval_content"
        android:paddingLeft="21dp"
        android:paddingRight="21dp"
        android:paddingBottom="21dp"
        android:gravity="center"
        android:orientation="vertical">

        <!--<TextView
            android:id="@+id/tv_premium_confirmation_about_to"
            android:text="@string/premium_buy_confirmation_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textAlignment="center"
            android:textColor="@color/material_black_text_color"
            android:textSize="@dimen/text_small_medium" />-->

        <TextView
            android:id="@+id/tv_premium_confirmation_day"
            android:text="@string/premium_buy_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textAlignment="center"
            android:textColor="@color/material_black_text_color"
            android:textSize="@dimen/text_small_medium" />

        <TextView
            android:id="@+id/tv_premium_confirmation_vex"
            android:text="@string/premium_buy_vex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/interval_small"
            android:textColor="@color/material_black_text_color"
            android:textSize="@dimen/text_small_medium" />

        <TextView
            android:id="@+id/tv_premium_confirmation_total"
            android:text="@string/premium_buy_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/interval_main"
            android:textColor="@color/material_black_text_color"
            android:textSize="@dimen/text_small_medium" />

        <TextView
            android:id="@+id/tv_premium_confirmation_total_amount"
            android:text="200 VEX"
            android:tag="bold"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/interval_small"
            android:textColor="@color/material_black_text_color"
            android:textSize="@dimen/text_small_medium" />

        <TextView
            android:id="@+id/tv_premium_confirmation_warning"
            android:text="@string/premium_buy_warning"
            android:tag="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/interval_main"
            android:textColor="@color/material_red_4F39"
            android:textSize="@dimen/text_small_medium" />

    </LinearLayout>

</RelativeLayout>

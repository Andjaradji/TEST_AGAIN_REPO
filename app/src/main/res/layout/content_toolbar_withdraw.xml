<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/interval_content"
        android:layout_marginStart="@dimen/interval_content"
        android:padding="10dp"
        android:src="@drawable/ic_back" />

    <TextView
        android:id="@+id/tv_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/interval_main"
        android:layout_marginStart="@dimen/interval_main"
        android:layout_toEndOf="@id/back_button"
        android:layout_toRightOf="@id/back_button"
        android:tag="hnBoldCond"
        android:text="@string/wallet_withdraw"
        android:textColor="@color/material_black_text_color"
        android:textSize="@dimen/text_big_medium" />

    <ImageButton
        android:id="@+id/ib_history"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/interval_content"
        android:layout_marginRight="@dimen/interval_content"
        android:background="@color/transparent"
        android:contentDescription="@string/image_content_description"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/history" />

</RelativeLayout>
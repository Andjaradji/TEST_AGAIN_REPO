<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.premium.ui.PremiumMemberActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="0dp"
            android:contentInsetEnd="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetStart="0dp"
            android:padding="0dp"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp">

            <include layout="@layout/content_toolbar_premium" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar"
        android:background="@color/material_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shape_white_underline"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/interval_main">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="bold"
                        android:text="@string/loyalty_point"
                        android:textColor="@color/material_black_text_color"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/tv_loyalty_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/interval_content"
                        android:tag="bold"
                        android:text="0"
                        android:textColor="@color/material_black_text_color"
                        android:textSize="@dimen/text_small"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_lp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/interval_content"
                    android:padding="@dimen/interval_content"
                    android:tag="bold"
                    android:text="0"
                    android:textColor="@color/material_black_text_color"
                    android:textSize="@dimen/text_tiny" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/lineColor" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_premium_top_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rl_premium_top_become_premium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.asksira.loopingviewpager.LoopingViewPager

                        android:id="@+id/vp_premium_member"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/shape_premium_bg"
                        app:autoScroll="true"
                        app:isInfinite="true"
                        app:scrollInterval="5000"
                        app:viewpagerAspectRatio="1.33">

                    </com.asksira.loopingviewpager.LoopingViewPager>

                    <com.rd.PageIndicatorView
                        android:id="@+id/pi_premium_member"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/vp_premium_member"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/interval_main"
                        app:piv_animationType="scale"
                        app:piv_dynamicCount="true"
                        app:piv_interactiveAnimation="true"
                        app:piv_padding="@dimen/walkthrough_indicator_padding"
                        app:piv_radius="@dimen/walkthrough_indicator_radius"
                        app:piv_selectedColor="@color/material_white"
                        app:piv_unselectedColor="@color/material_white_trans_ef" />

                    <TextView
                        android:id="@+id/tv_become_premium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/interval_medium"
                        android:tag="hnBoldCond"
                        android:text="@string/premium_become"
                        android:textAlignment="center"
                        android:textColor="@color/material_white"
                        android:textSize="@dimen/text_large" />

                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/ll_premium_top_already_premium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="54dp"
                    android:layout_marginTop="54dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/interval_submain"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_tick" />

                        <TextView
                            android:id="@+id/tv_already_premium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/interval_main"
                            android:tag="bold"
                            android:textAlignment="textStart"
                            android:textColor="@color/material_black_text_color"
                            android:textSize="@dimen/text_small_medium" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/interval_content"
                            android:layout_marginRight="@dimen/interval_content"
                            android:text="@string/premium_ended_time_countdown"
                            android:textAllCaps="true"
                            android:textColor="@color/material_black_sub_text_color"
                            android:textSize="@dimen/text_xtiny" />

                        <TextView
                            android:id="@+id/tv_countdown"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tag="bold"
                            android:textColor="@color/material_black_text_color"
                            android:textSize="@dimen/text_xtiny" />
                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_premium_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_premium_plan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/interval_content"
                    android:layout_marginTop="@dimen/interval_medium"
                    android:paddingLeft="@dimen/interval_main"
                    android:paddingRight="@dimen/interval_main"
                    android:tag="bold"
                    android:text="@string/premium_plan"
                    android:textColor="@color/material_black_text_color"
                    android:textSize="@dimen/text_title" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_premium"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/tv_premium_plan">

                </android.support.v7.widget.RecyclerView>

            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

    <include layout="@layout/include_loading_view" />

</RelativeLayout>
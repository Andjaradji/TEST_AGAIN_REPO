<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_luckydraw"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/interval_content"
    android:layout_marginEnd="@dimen/interval_main"
    android:layout_marginLeft="@dimen/interval_main"
    android:layout_marginRight="@dimen/interval_main"
    android:layout_marginStart="@dimen/interval_main"
    android:layout_marginTop="@dimen/interval_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_luckydraw_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/voucher_image_height"
            android:contentDescription="@string/image_content_description"
            android:scaleType="centerCrop"
            android:transitionName="voucher_image" />

        <ImageView
            android:id="@+id/iv_premium"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/image_content_description"
            android:src="@drawable/premium_label" />

        <RelativeLayout
            android:id="@+id/rl_banner_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/voucher_text_container_height"
            android:layout_below="@id/iv_luckydraw_image"
            android:layout_marginBottom="6dp"
            android:orientation="vertical"
            android:paddingEnd="@dimen/interval_main"
            android:paddingLeft="@dimen/interval_main"
            android:paddingRight="@dimen/interval_main"
            android:paddingStart="@dimen/interval_main">

            <TextView
                android:id="@+id/tv_luckydraw_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:maxLines="1"
                android:paddingBottom="@dimen/interval_small"
                android:paddingTop="@dimen/interval_small"
                android:tag="bold"
                android:textColor="@color/material_black_text_color"
                android:textSize="@dimen/text_small_medium" />

            <View
                android:id="@+id/v_banner_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tv_luckydraw_title"
                android:background="@color/material_grey_d8">

            </View>

            <LinearLayout
                android:id="@+id/ll_coupon_detail_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/v_banner_line"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_your_coupon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:tag="bold"
                        android:text="@string/luckydraw_your_coupon"
                        android:textAllCaps="true"
                        android:textColor="@color/material_black_text_color"
                        android:textSize="@dimen/text_xxtiny" />

                    <TextView
                        android:id="@+id/tv_your_coupon_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:paddingLeft="@dimen/interval_small"
                        android:tag="bold"
                        android:textAllCaps="true"
                        android:textColor="@color/material_black_text_color"
                        android:textSize="@dimen/text_xxtiny" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_total_coupon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:tag="bold"
                        android:text="@string/luckydraw_total_coupon"
                        android:textAllCaps="true"
                        android:textColor="@color/material_black_text_color"
                        android:textSize="@dimen/text_xxtiny" />

                    <TextView
                        android:id="@+id/tv_total_coupon_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:paddingLeft="@dimen/interval_small"
                        android:tag="bold"
                        android:textAllCaps="true"
                        android:textColor="@color/material_black_text_color"
                        android:textSize="@dimen/text_xxtiny" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:tag="bold"
                        android:textAllCaps="true"
                        android:textColor="@color/material_black_text_color"
                        android:textSize="@dimen/text_xxtiny" />

                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_winner_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_banner_info"
            android:gravity="center"
            android:paddingBottom="@dimen/interval_main"
            android:paddingLeft="@dimen/interval_content"
            android:paddingRight="@dimen/interval_content"
            android:paddingTop="@dimen/interval_small"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_winner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="bold"
                android:textAlignment="center"
                android:textColor="@color/material_black_text_color"
                android:textSize="@dimen/text_small_medium" />

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ad_list_item_fb_frame_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/frame_ad_item"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/shape_white_round_rect"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_brand_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp" />
    </LinearLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.voucher.ui.VoucherActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="0dp"
                android:contentInsetEnd="0dp"
                android:contentInsetLeft="0dp"
                android:contentInsetRight="0dp"
                android:contentInsetStart="0dp"
                android:padding="0dp"
                app:contentInsetEnd="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetStart="0dp">

                <include layout="@layout/content_toolbar_vexpoint" />

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:id="@+id/rl_vexpoint_card_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:background="@color/material_white">



            <RelativeLayout
                android:id="@+id/rl_vexpoint_card"
                android:layout_width="300dp"
                android:layout_height="180dp"
                android:layout_centerInParent="true">

                <View
                    android:id="@+id/v_vexpoint_shadow"
                    android:layout_marginTop="30dp"
                    android:layout_width="250dp"
                    android:layout_height="130dp"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"
                    android:background="@drawable/shadow_vexpoint"></View>

                <RelativeLayout
                    android:layout_width="250dp"
                    android:layout_height="120dp"
                    android:transitionName="vexpoint_button"
                    android:layout_margin="25dp"
                    android:background="@drawable/shape_vexpoint_bg"
                    android:layout_centerHorizontal="true">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_ask_me"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="@dimen/interval_content"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_centerInParent="true">
                        <TextView
                            android:id="@+id/tv_vexpoint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tag="hnBoldCond"
                            android:text="1.500"
                            android:transitionName="vexpoint_amount"
                            android:textColor="@color/material_white"
                            android:textSize="@dimen/text_xlarge"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/interval_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#ABFFFFFF"
                                android:textSize="@dimen/text_small"
                                android:text="@string/vexpoint_estimate_reward"
                                android:layout_marginRight="@dimen/interval_content"
                                android:tag="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/material_white"
                                android:textSize="@dimen/text_small"
                                android:tag="hnBoldCond"
                                android:text="1500"/>
                            <ImageView
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_marginLeft="@dimen/interval_small"
                                android:src="@drawable/ic_triangle"/>
                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/material_grey_E8E8E8" />

        <com.vexanium.vexgift.widget.IconTextTabBarView
            android:id="@+id/tab_vexpoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.vexanium.vexgift.widget.IconTextTabBarView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/material_grey_E8E8E8" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_vexpoint"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>


    </LinearLayout>

</RelativeLayout>
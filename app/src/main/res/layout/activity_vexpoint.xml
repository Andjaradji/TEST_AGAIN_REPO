<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.voucher.ui.VoucherActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="0dp"
            android:contentInsetEnd="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetStart="0dp"
            android:padding="0dp"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp">

            <include layout="@layout/content_toolbar_vexpoint" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/rl_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar"
        android:visibility="visible">


        <RelativeLayout
            android:id="@+id/rl_vexpoint_card_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/material_white"
            android:paddingBottom="30dp"
            android:paddingTop="30dp">

            <RelativeLayout
                android:id="@+id/rl_vexpoint_card"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_centerInParent="true">

                <View
                    android:id="@+id/v_vexpoint_shadow"
                    android:layout_width="250dp"
                    android:layout_height="130dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/shadow_vexpoint"
                    android:visibility="gone"></View>

                <RelativeLayout
                    android:id="@+id/vp_box"
                    android:layout_width="250dp"
                    android:layout_height="120dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/shape_vexpoint_bg"
                    android:transitionName="vexpoint_button">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/interval_content"
                        android:src="@drawable/ic_ask_me" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_vexpoint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tag="hnBoldCond"
                            android:textColor="@color/material_white"
                            android:textSize="@dimen/text_xlarge"
                            android:transitionName="vexpoint_amount" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/interval_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/interval_content"
                                android:tag="bold"
                                android:text="@string/vexpoint_estimate_reward"
                                android:textColor="#ABFFFFFF"
                                android:textSize="@dimen/text_small" />

                            <TextView
                                android:id="@+id/tv_vexpoint_generated"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tag="hnBoldCond"
                                android:textColor="@color/material_white"
                                android:textSize="@dimen/text_small" />

                            <ImageView
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_marginLeft="@dimen/interval_small"
                                android:src="@drawable/ic_triangle" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/vp_box"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/interval_content"
                        android:layout_marginRight="@dimen/interval_content"
                        android:text="@string/vp_time_snapshoot"
                        android:textColor="@color/material_black_sub_text_color"
                        android:textSize="@dimen/text_xtiny" />

                    <TextView
                        android:id="@+id/tv_countdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="bold"
                        android:text="00:00:00"
                        android:textColor="@color/material_black_text_color"
                        android:textSize="@dimen/text_xtiny" />
                </LinearLayout>
            </RelativeLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_vexpoint_card_container"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/material_grey_E8E8E8" />

            <com.vexanium.vexgift.widget.IconTextTabBarView
                android:id="@+id/tab_vexpoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.vexanium.vexgift.widget.IconTextTabBarView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/shape_drop_shadow" />

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_vexpoint"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v4.view.ViewPager>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_notif_info"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@id/app_bar"
            android:background="#e86c26"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_ripple_transparent"></View>

            <TextView
                android:id="@+id/tv_notif_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="20dp"
                android:paddingRight="40dp"
                android:textColor="@color/material_white"
                android:textSize="@dimen/text_small_medium" />

            <TextView
                android:id="@+id/tv_notif_see_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="20dp"
                android:text="@string/box_notif_see_all"
                android:textColor="@color/material_white"
                android:textSize="@dimen/text_xtiny" />

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/material_white"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/interval_main"
            android:layout_marginTop="@dimen/interval_main"
            android:tag="hnMed"
            android:text="@string/vexpoint_need_address_title"
            android:textColor="@color/material_black_text_color"
            android:textSize="@dimen/text_big_medium" />

        <ImageView
            android:layout_width="181dp"
            android:layout_height="150dp"
            android:src="@drawable/kyc_illustration" />

        <TextView
            android:id="@+id/tv_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/interval_small"
            android:layout_marginTop="@dimen/interval_main"
            android:tag="hnMed"
            android:text="@string/vexpoint_need_address_subtitle"
            android:textColor="@color/material_black_text_color"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/tv_info_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/interval_main"
            android:paddingEnd="@dimen/interval_big"
            android:paddingLeft="@dimen/interval_big"
            android:paddingRight="@dimen/interval_big"
            android:paddingStart="@dimen/interval_big"
            android:text="@string/vexpoint_need_address_desc"
            android:textAlignment="center"
            android:textColor="@color/material_black_sub_text_color"
            android:textSize="@dimen/text_small" />

        <LinearLayout
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/interval_main"
            android:layout_marginTop="@dimen/interval_small"
            android:background="@drawable/shape_ripple_small_button"
            android:gravity="center"
            android:paddingBottom="@dimen/interval_submain"
            android:paddingLeft="@dimen/interval_big"
            android:paddingRight="@dimen/interval_big"
            android:paddingTop="@dimen/interval_submain">

            <TextView
                android:id="@+id/tv_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="bold"
                android:text="@string/vexpoint_need_address_button"
                android:textAllCaps="true"
                android:textColor="@color/material_white"
                android:textSize="@dimen/text_xtiny" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
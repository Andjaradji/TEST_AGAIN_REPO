<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginTop="6dp"
    android:background="@color/material_white_dd"
    android:orientation="vertical"
    android:paddingBottom="@dimen/interval_small"
    android:paddingEnd="@dimen/interval_main"
    android:paddingStart="@dimen/interval_main"
    android:paddingTop="@dimen/interval_small">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/interval_small"
        android:layout_marginTop="@dimen/interval_main"
        android:tag="bold"
        android:textAlignment="textStart"
        android:textColor="@color/material_black_text_color"
        android:textSize="@dimen/text_title" />

    <TextView
        android:id="@+id/tv_sale_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/interval_content"
        android:layout_marginStart="@dimen/interval_small"
        android:tag="bold"
        android:textColor="@color/material_black_text_color"
        android:textSize="@dimen/text_tiny" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/interval_small"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="2"
            android:background="@drawable/rect_shadow"
            android:orientation="vertical"
            android:padding="@dimen/interval_submain">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/interval_small"
                android:tag="bold"
                android:text="@string/token_sale_token_type"
                android:textColor="@color/material_black_sub_text_color"
                android:textSize="@dimen/text_xtiny" />

            <TextView
                android:id="@+id/tv_token_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/interval_small"
                android:tag="bold"
                android:textColor="@color/material_black_text_color"
                android:textSize="@dimen/text_xtiny" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="254dp"
        android:background="@drawable/rect_shadow"
        android:orientation="vertical"
        android:padding="@dimen/interval_submain">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/interval_small"
            android:tag="bold"
            android:text="@string/deposit_description"
            android:textColor="@color/material_black_sub_text_color"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/interval_small"
            android:textColor="@color/material_black_text_color"
            android:textSize="@dimen/text_xtiny" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/interval_small"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:background="@drawable/rect_shadow"
            android:orientation="vertical"
            android:padding="@dimen/interval_submain">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/interval_small"
                android:tag="bold"
                android:text="@string/buyback_coin_bought"
                android:textColor="@color/material_black_sub_text_color"
                android:textSize="@dimen/text_xtiny" />

            <TextView
                android:id="@+id/tv_token_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/interval_small"
                android:tag="bold"
                android:textColor="@color/material_black_text_color"
                android:textSize="@dimen/text_xtiny" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="2dp"
            android:layout_weight="1"
            android:background="@drawable/rect_shadow"
            android:orientation="vertical"
            android:padding="@dimen/interval_submain">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/interval_small"
                android:tag="bold"
                android:text="@string/buyback_coin_total"
                android:textColor="@color/material_black_sub_text_color"
                android:textSize="@dimen/text_xtiny" />

            <TextView
                android:id="@+id/tv_token_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/interval_small"
                android:tag="bold"
                android:textColor="@color/material_black_text_color"
                android:textSize="@dimen/text_xtiny" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_payment_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/interval_main"
        android:layout_marginTop="@dimen/interval_small"
        android:background="@drawable/shape_ripple_main_button"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/interval_submain"
            android:tag="bold"
            android:text="@string/buyback_options"
            android:textAllCaps="true"
            android:textColor="@color/material_white"
            android:textSize="@dimen/text_small" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_payment_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/interval_submain"
        android:layout_marginStart="@dimen/interval_small"
        android:layout_marginTop="@dimen/interval_main"
        android:tag="bold"
        android:text="@string/buyback_options"
        android:textAlignment="textStart"
        android:textColor="@color/material_black_text_color"
        android:textSize="@dimen/text_medium"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_payment_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>


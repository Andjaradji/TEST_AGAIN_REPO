<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/interval_content"
    android:layout_marginTop="@dimen/interval_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.vexanium.vexgift.widget.discretescrollview.DiscreteScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="218dp"></com.vexanium.vexgift.widget.discretescrollview.DiscreteScrollView>

    <com.rbrooks.indefinitepagerindicator.IndefinitePagerIndicator
        android:id="@+id/recyclerview_pager_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dotColor="#66444444"
        app:dotRadius="2dp"
        app:fadingDotCount="2"
        app:selectedDotColor="#67C9D4"
        app:selectedDotRadius="4dp" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_coupon"
    android:layout_width="312dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginEnd="-4dp"
    android:layout_marginLeft="-4dp"
    android:layout_marginRight="-4dp"
    android:layout_marginStart="-4dp">

    <ImageView
        android:id="@+id/iv_coupon_image"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/iv_premium"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/image_content_description"
        android:src="@drawable/premium_label" />

    <RelativeLayout
        android:id="@+id/rl_banner_info"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_below="@id/iv_coupon_image"
        android:layout_marginBottom="6dp"
        android:orientation="vertical"
        android:paddingEnd="@dimen/interval_main"
        android:paddingLeft="@dimen/interval_main"
        android:paddingRight="@dimen/interval_main"
        android:paddingStart="@dimen/interval_main">

        <TextView
            android:id="@+id/tv_coupon_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ll_banner_exp_info"
            android:layout_toStartOf="@+id/ll_banner_exp_info"
            android:maxLines="2"
            android:paddingEnd="@dimen/interval_main"
            android:paddingRight="@dimen/interval_main"
            android:tag="bold"
            android:textColor="@color/material_black_text_color"
            android:textSize="@dimen/text_small_medium" />

        <LinearLayout
            android:id="@id/ll_banner_exp_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="end"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="bold"
                    android:textColor="@color/material_white"
                    android:textSize="@dimen/text_xtiny" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_coupon_exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/interval_small"
                android:tag="light"
                android:textColor="@color/material_black_text_color"
                android:textSize="@dimen/text_xtiny" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ad_list_item_fb_frame_image"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@drawable/frame_ad_item"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/shape_white_round_rect"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_brand_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp" />
    </LinearLayout>

</RelativeLayout>
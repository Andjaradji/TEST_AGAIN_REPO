<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:tag="bold"
        android:textColor="@color/material_black_text_color"
        android:textSize="@dimen/text_big_medium" />

    <ImageView
        android:id="@+id/iv_vex_logo"
        android:layout_width="94dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/logo" />

    <LinearLayout
        android:id="@+id/home_vp_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/shape_vp_bg"
        android:transitionName="vexpoint_button"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/interval_content"
            android:tag="hnBoldCond"
            android:text="VP"
            android:textColor="@color/material_white_trans_df"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/home_vp_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="100dp"
            android:minWidth="20dp"
            android:tag="hnBoldCond"
            android:text="1500"
            android:textAlignment="textEnd"
            android:textColor="@color/material_white"
            android:transitionName="vexpoint_amount"
            android:textSize="@dimen/text_small" />

    </LinearLayout>

</RelativeLayout>
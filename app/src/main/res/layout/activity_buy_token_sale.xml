<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.voucher.ui.ReceiveVoucherActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="0dp"
            android:contentInsetEnd="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetStart="0dp"
            android:padding="0dp"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp">

            <include layout="@layout/content_toolbar_back" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar"
        android:background="@color/material_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/interval_main"
                android:text="Enter amount of payment"
                android:textColor="@color/material_black_text_color"
                android:textSize="@dimen/text_small_medium" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"

                android:layout_marginEnd="@dimen/interval_main"
                android:layout_marginLeft="@dimen/interval_main"
                android:layout_marginRight="@dimen/interval_main"
                android:layout_marginStart="@dimen/interval_main"
                android:layout_marginTop="@dimen/interval_small"
                android:background="@drawable/shape_voucher_availability"
                android:gravity="center">

                <EditText
                    android:id="@+id/et_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/interval_submain"
                    android:hint="Payment amount"
                    android:inputType="numberDecimal"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/btn_scan"
                    android:textColor="@color/material_black_text_color"
                    android:background="@color/transparent"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textSize="@dimen/text_small_medium" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="@dimen/interval_main"
                android:paddingStart="@dimen/interval_main">

                <TextView
                    android:id="@+id/tv_token_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/interval_small"
                    android:layout_marginTop="@dimen/interval_main"
                    android:tag="bold"
                    android:textAlignment="textStart"
                    android:textColor="@color/material_black_text_color"
                    android:textSize="@dimen/text_title" />

                <TextView
                    android:id="@+id/tv_sale_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/interval_content"
                    android:layout_marginStart="@dimen/interval_small"
                    android:tag="bold"
                    android:textColor="@color/material_black_text_color"
                    android:textSize="@dimen/text_tiny" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="8"
                    android:background="@drawable/rect_shadow"
                    android:orientation="vertical"
                    android:padding="@dimen/interval_submain"
                    android:paddingRight="@dimen/interval_main">

                    <TextView
                        android:id="@+id/tv_payment_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/interval_small"
                        android:textSize="@dimen/text_xtiny" />

                    <TextView
                        android:id="@+id/tv_payment_body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/interval_small"
                        android:tag="bold"
                        android:textColor="@color/material_black_text_color"
                        android:textSize="@dimen/text_xtiny" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="8"
                    android:background="@drawable/rect_shadow"
                    android:orientation="vertical"
                    android:padding="@dimen/interval_submain"
                    android:paddingRight="@dimen/interval_main">

                    <TextView
                        android:id="@+id/tv_purchased_total_title"
                        android:text="Purchased total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/interval_small"
                        android:textSize="@dimen/text_xtiny" />

                    <TextView
                        android:id="@+id/tv_purchased_total_body"
                        android:text="1000 VEX"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/interval_small"
                        android:tag="bold"
                        android:textColor="@color/material_black_text_color"
                        android:textSize="@dimen/text_xtiny" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/btn_buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/interval_main"
                android:layout_marginEnd="@dimen/interval_main"
                android:layout_marginLeft="@dimen/interval_main"
                android:layout_marginRight="@dimen/interval_main"
                android:layout_marginStart="@dimen/interval_main"
                android:layout_marginTop="@dimen/interval_small"
                android:background="@drawable/shape_ripple_main_button"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/interval_submain"
                    android:tag="bold"
                    android:text="BUY"
                    android:textAllCaps="true"
                    android:textColor="@color/material_white"
                    android:textSize="@dimen/text_medium" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <include layout="@layout/include_loading_view"/>

</RelativeLayout>
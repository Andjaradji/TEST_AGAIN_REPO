<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_phase_3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/interval_main">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/interval_content"
        android:tag="bold"
        android:text="@string/deposit_step3_your_deposit"
        android:textColor="@color/material_black_text_color"
        android:textSize="@dimen/text_tiny" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/interval_content"
        android:background="@drawable/shape_white_round_rect_with_black_border"
        android:gravity="center"
        android:padding="@dimen/interval_main">

        <TextView
            android:id="@+id/tv_vex_count2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="bold"
            android:textColor="@color/material_black_text_color"
            android:textSize="@dimen/text_title" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/interval_big"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="bold"
            android:text="@string/deposit_step3_has_been"
            android:textColor="@color/material_black_text_color"
            android:textSize="@dimen/text_tiny" />

        <LinearLayout
            android:id="@+id/ll_confirmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/interval_small"
            android:background="@drawable/shape_deposit_confirmed_bg"
            android:paddingBottom="2dp"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:paddingTop="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="bold"
                android:text="@string/deposit_step3_confirmed"
                android:textColor="@color/material_white"
                android:textSize="@dimen/text_tiny" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_rejected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/interval_small"
            android:background="@drawable/shape_deposit_rejected_bg"
            android:paddingBottom="2dp"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:paddingTop="2dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="bold"
                android:text="@string/deposit_step3_rejected"
                android:textColor="@color/material_white"
                android:textSize="@dimen/text_tiny" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_confirmed_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/interval_content"
            android:tag="bold"
            android:text="@string/deposit_step3_link_check"
            android:textColor="@color/material_black_text_color"
            android:textSize="@dimen/text_tiny" />

        <TextView
            android:id="@+id/tv_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/interval_big"
            android:tag="bold"
            android:textColor="@color/material_blue_3651"
            android:textSize="@dimen/text_xtiny" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/interval_content"
            android:tag="bold"
            android:text="@string/deposit_step3_will_distribute"
            android:textColor="@color/material_black_text_color"
            android:textSize="@dimen/text_tiny" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/interval_content"
            android:background="@drawable/shape_white_round_rect_with_black_border"
            android:gravity="center"
            android:padding="@dimen/interval_main">

            <TextView
                android:id="@+id/tv_vex_distribute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="bold"
                android:textColor="@color/material_black_text_color"
                android:textSize="@dimen/text_title" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/interval_big"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deposit_step3_to_your_address_before"
                android:textColor="@color/material_black_text_color"
                android:textSize="@dimen/text_tiny" />

            <TextView
                android:id="@+id/tv_time_distribute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/interval_content"
                android:tag="bold"
                android:textColor="@color/material_black_text_color"
                android:textSize="@dimen/text_tiny" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/interval_content"
        android:layout_marginTop="@dimen/interval_submain"
        android:tag="bold"
        android:text="Note :"
        android:textColor="@color/material_black_text_color"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_note_step3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/material_black_text_color"
        android:textSize="@dimen/text_xtiny" />

</LinearLayout>
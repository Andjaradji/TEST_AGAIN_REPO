<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_coupon"
    android:layout_width="match_parent"
    android:layout_height="108dp"
    android:layout_gravity="center">

    <LinearLayout
        android:id="@+id/ll_shortcut"
        android:layout_width="match_parent"
        android:paddingStart="@dimen/interval_content"
        android:paddingEnd="@dimen/interval_content"
        android:layout_height="match_parent"
        android:weightSum="4"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/my_voucher_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="72dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/icon_shortcut"
                        android:contentDescription="@string/image_content_description"
                        android:src="@drawable/ic_gift" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:tag="hnBoldCond"
                android:text="@string/shortcut_gift_voucher"
                android:textAlignment="center"
                android:textColor="@color/primary_dark"
                android:textSize="@dimen/text_shortcut" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_token_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="72dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/icon_shortcut"
                        android:contentDescription="@string/image_content_description"
                        android:src="@drawable/ic_coin" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:tag="hnBoldCond"
                android:text="@string/shortcut_token_airdrop"
                android:textAlignment="center"
                android:textColor="@color/primary_dark"
                android:textSize="@dimen/text_shortcut" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/token_sale_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="72dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/icon_shortcut"
                        android:contentDescription="@string/image_content_description"
                        android:src="@drawable/ic_token_sale" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:tag="hnBoldCond"
                android:text="@string/shortcut_token_sale"
                android:textAlignment="center"
                android:textColor="@color/primary_dark"
                android:textSize="@dimen/text_shortcut" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_wallet_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="72dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/icon_shortcut"
                        android:contentDescription="@string/image_content_description"
                        android:src="@drawable/ic_wallet" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:tag="hnBoldCond"
                android:text="@string/shortcut_deposit"
                android:textAlignment="center"
                android:textColor="@color/primary_dark"
                android:textSize="@dimen/text_shortcut" />
        </LinearLayout>

    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/interval_content"
        android:background="@drawable/shape_drop_shadow"></View>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">
    
    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:id="@+id/back_button"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/interval_main"
        android:layout_marginLeft="@dimen/interval_main"
        android:src="@drawable/ic_back"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_vex_logo"
            android:layout_width="21dp"
            android:layout_height="18dp"
            android:layout_marginRight="@dimen/interval_content"
            android:layout_marginEnd="@dimen/interval_content"
            android:src="@drawable/ic_coin" />
        <TextView
            android:id="@+id/tv_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="bold"
            android:text="@string/token_title"
            android:textColor="@color/material_black_text_color"
            android:textSize="@dimen/text_big_medium" />

    </LinearLayout>

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/interval_main"
        android:layout_marginEnd="@dimen/interval_main"
        android:src="@drawable/ic_search"/>

</RelativeLayout>
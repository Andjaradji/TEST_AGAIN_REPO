<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_ripple_transparent"
    android:clickable="true"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <LinearLayout
        android:id="@+id/ll_main_text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:gravity="left|center_vertical"
            android:orientation="vertical"
            android:paddingBottom="4dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="2dp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textColor="@color/material_black"
                android:textSize="@dimen/text_small_medium"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tv_item_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textColor="@color/material_black"
                android:textSize="@dimen/text_xxtiny"
                android:textStyle="italic" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_indicator"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_weight="3"
            android:ellipsize="marquee"
            android:gravity="right|center_vertical"
            android:marqueeRepeatLimit="1"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:singleLine="true"
            android:textColor="@color/vexpoint_plus"
            android:textSize="@dimen/text_small_medium" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_main_text_container"
        android:paddingBottom="15dp"
        android:textColor="#6F6FEE"
        android:textSize="@dimen/text_xtiny" />
</RelativeLayout>
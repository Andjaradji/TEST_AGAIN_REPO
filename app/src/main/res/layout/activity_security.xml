<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.security.ui.SecurityActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="0dp"
            android:contentInsetEnd="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetStart="0dp"
            android:padding="0dp"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp">

            <include layout="@layout/content_toolbar_back" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar"
        android:background="@color/material_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_notif_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/material_grey_E8E8E8"
                android:padding="@dimen/interval_main"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_ripple_transparent"></View>

                <TextView
                    android:id="@+id/tv_notif_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/security_note"
                    android:textColor="@color/material_black_text_color"
                    android:textSize="@dimen/text_xtiny" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="20dp">

                <RelativeLayout
                    android:id="@+id/security_change_password_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_ripple_transparent"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/tv_change_pass"
                        android:layout_toStartOf="@+id/tv_change_pass"
                        android:padding="@dimen/margin_common_list"
                        android:text="@string/security_change_password_label"
                        android:textColor="@color/material_black_text_color"
                        android:textSize="@dimen/text_small_medium" />

                    <TextView
                        android:id="@id/tv_change_pass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/margin_common_list"
                        android:text="@string/security_change_password"
                        android:textAllCaps="true"
                        android:textColor="@color/material_black_sub_text_color"
                        android:textSize="@dimen/text_xtiny" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/security_google_auth_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_ripple_transparent"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/google_auth_status"
                        android:layout_toStartOf="@+id/google_auth_status"
                        android:padding="@dimen/margin_common_list"
                        android:text="@string/security_google_auth_label"
                        android:textColor="@color/material_black_text_color"
                        android:textSize="@dimen/text_small_medium" />

                    <TextView
                        android:id="@id/google_auth_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/margin_common_list"
                        android:text="OFF"
                        android:textColor="@color/material_black_sub_text_color"
                        android:textSize="@dimen/text_xtiny" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/security_finger_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:background="@drawable/shape_ripple_transparent"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/fingerprint_status"
                        android:layout_toStartOf="@+id/fingerprint_status"
                        android:padding="@dimen/margin_common_list"
                        android:text="@string/security_fingerprint"
                        android:textColor="@color/material_black_text_color"
                        android:textSize="@dimen/text_small_medium" />

                    <TextView
                        android:id="@id/fingerprint_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/margin_common_list"
                        android:text="OFF"
                        android:textColor="@color/material_black_sub_text_color"
                        android:textSize="@dimen/text_xtiny" />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
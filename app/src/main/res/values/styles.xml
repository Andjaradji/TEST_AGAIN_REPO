<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary</item>
        <item name="android:divider">@color/divider</item>
        <item name="colorAccent">@color/vex_orange</item>
        <item name="android:textColorHint">@color/material_grey_d5</item>
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:itemBackground">@color/item_color</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.LauncherAppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.VexSwitch" parent="AppTheme">
        <item name="android:paddingTop">@dimen/setting_push_margin</item>
        <item name="android:paddingBottom">@dimen/setting_push_margin</item>
        <item name="android:paddingLeft">@dimen/more_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/more_padding_horizontal</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/text_tiny</item>
        <item name="android:thumb">@drawable/shape_switch_thumb</item>
        <item name="android:track">@drawable/shape_switch_track</item>
        <item name="trackTint">@color/vex_orange</item>
        <item name="android:switchMinWidth">0dp</item>
        <item name="android:textOff">""</item>
        <item name="android:textOn">""</item>
        <item name="android:background">@drawable/shape_ripple_transparent</item>

    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/material_black_text_color</item>
        <item name="android:textSize">@dimen/text_xtiny</item>
        <!-- TextInputLayout text color-->
        <item name="colorControlActivated">@color/material_black_text_color</item>
        <!-- EditText line color when EditText on-focus-->
        <item name="colorControlHighlight">@color/material_black_text_color</item>
        <!-- EditText line color when EditText  in un-focus-->
        <item name="colorControlNormal">@color/material_black_text_color</item>
    </style>

    <style name="MaterialDialogSheet" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/MaterialDialogSheetAnimation</item>
    </style>

    <style name="MaterialDialogSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in_anim</item>
        <item name="android:windowExitAnimation">@anim/fade_out_anim</item>
    </style>

    <style name="AppTheme.ShareButton" parent="AppTheme">
        <item name="android:padding">8dp</item>
    </style>

    <style name="AppTheme.ShareButton.noPadding" parent="AppTheme.ShareButton">
        <item name="android:padding">0dp</item>
    </style>


</resources>
